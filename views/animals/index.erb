<h1><%=@header%></h1>

<div class="filter">
  <div class="col">
    filter:
  </div>
  <div class="col">
    <a href="/animals">all</a>
  </div>
  <div class = "col">
    <a href="/animals/adoptable">adoptable</a>
  </div>
  <%@types.each do |type|%>
    <div class="col">
      <a href='/animals/types/<%=type.id%>'><%=type.type%>s</a>
    </div>
  <%end%>
</div>





<p><a href="/animals/new">Admit new animal</a></p>

<% @animals.each do |animal| %>
  <p>Name: <%= animal.name %></p>
  <p>Admission Date: <%= animal.admission_date_formatted %></p>
  <p>Adoption Status: <%= animal.get_adoption_status %></p>
  <p><a href="/animals/<%= animal.id %>">View and Update</a></p>
<!-- add type etc? -->
<% end %>