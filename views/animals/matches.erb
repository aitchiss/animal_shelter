<div class="heading">
  <h1>matching owners for <%=@animal.name%></h1>
</div>

<%if @matched_owners == []%>
  <div class="not-found">
    <p>there are currently no matching owners</p>
  </div> 
<%end%>


<div class="info-list">
  <% @matched_owners.each do |owner| %>
    <div class="list-entry">
      <div class="img-container">
        <img src="/images/owner_avatar.png" />
      </div>
      <div class="info-container">
        <p><strong>first name:</strong> <%= owner.first_name%></p>
        <p><strong>last name:</strong> <%= owner.last_name%></p>
        <p><strong>animals adopted:</strong> <%= owner.animals.count%></p>
      </div>
      <a class="view-btn" href="/owners/<%= owner.id%>">view</a>
    </div>
  <%end%>
</div>