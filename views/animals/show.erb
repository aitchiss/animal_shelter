<div class="heading">
  <h1><%= @animal.name%> the <%= @animal.breed%></h1>
</div>


<div class="profile">

  <div class="profile-img-container">
    <img src="<%= @animal.photo_file_path%>" />
  </div>

  <div class="profile-details">
    <p><strong>admission date:</strong> <%= @animal.admission_date_formatted%></p>

    <p><strong>breed: </strong><%= @animal.breed%></p>

    <p><strong>adoption status: </strong><%= @animal.get_adoption_status%>

    <% if @animal.get_adoption_status == "adopted"%>
       by <a href="/owners/<%= @animal.owner.id%>"><%= @animal.owner.first_name %> <%=@animal.owner.last_name%></a>
     <%end%></p>

    <p><strong>needs:</strong></p>

    <ul>
      <%if @animal.needs_outside_space == 't' %>
        <li>a home with outside space</li>
      <%else%>
        <li>happy with little or no outside space</li>
      <%end%>

      <%if @animal.can_live_with_children == 'f' %>
        <li><%= @animal.name%>a home without young children</li>
      <%else%>
        <li>happy to live with young children</li>
      <%end%>

      <%if @animal.can_live_with_same_type == 't' %>
        <li>happy to live with other <%= @animal.get_type%>s</li>
      <%else%>
        <li>does not get along with other <%= @animal.get_type%>s</li>
      <%end%>

      <%if @animal.can_live_with_other_type == 't'%>
        <li>gets along well with other animals</li>
      <%else%>
        <li>would prefer a home without other types of animals</li>
      <%end%>
    </ul>

    <div class="profile-buttons">

      <%if @animal.get_adoption_status != "adopted"%>
      
        <a class="profile-btn" href="/animals/<%= @animal.id%>/match">view matches</a>
      <%end%>

      <a class="profile-btn" href="/animals/<%= @animal.id%>/edit">update</a>
    </div>

    <div class="delete-buttons">
      <form method="POST" action="/animals/<%=@animal.id%>/delete">
      <input type="submit" value="delete record">
      </form>
    </div>
  </div>
</div>
