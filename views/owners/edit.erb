<h1>Update owner details</h1>

<form method="POST" action="/owners/<%= @owner.id%>">

<label for "first_name">First Name: </label>
<input type="text" value="<%= @owner.first_name%>" name="first_name" id="first_name">

<label for "last_name">Last Name: </label>
<input type="text" value="<%= @owner.last_name%>" name="last_name" id="last_name">

<label for "address">Address: </label>
<input type="text" value="<%= @owner.address%>" name="address" id="address">

<label for "phone_number">Contact number: </label>
<input type="text" value="<%= @owner.phone_number%>" name="phone_number" id="phone_number">

<input type="submit" value="Update details" />

</form>