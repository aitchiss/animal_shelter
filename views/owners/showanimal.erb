
<div class="heading">
  <h1>match for <%= @owner.first_name%> <%= @owner.last_name%>: <%= @animal.name%> the <%= @animal.breed%></h1>
</div>


<div class="profile">

  <div class="profile-img-container">
    <img src="<%= @animal.photo_file_path%>" />
  </div>

  <div class="profile-details">
    <p><strong>admission date:</strong> <%= @animal.admission_date_formatted%></p>
    <p><strong>breed: </strong><%= @animal.breed%></p>
    <p><strong>adoption status: </strong><%= @animal.get_adoption_status%></p>
    <p><strong>needs:</strong></p>

    <ul>
      <%if @animal.needs_outside_space%>
        <li>a home with outside space</li>
      <%else%>
        <li>happy with little or no outside space</li>
      <%end%>

      <%if @animal.can_live_with_children %>
        <li>happy to live with young children</li>
      <%else%>
        <li>a home without young children</li>
      <%end%>

      <%if @animal.can_live_with_same_type%>
        <li>happy to live with other <%= @animal.get_type%>s</li>
      <%else%>
        <li>does not get along with other <%= @animal.get_type%>s</li>
      <%end%>

      <%if @animal.can_live_with_other_type%>
        <li>gets along well with other animals</li>
      <%else%>
        <li>would prefer a home without other types of animals</li>
      <%end%>

    </ul>
  
    <div class="profile-buttons">
      <a class="profile-btn" href="/adoptions/new/<%= @owner.id%>/<%= @animal.id%>">process adoption</a>
    </div>
  </div>
</div>
