<div class="heading">
  <h1>process adoption</h1>
</div>

<form method="POST" action="/adoptions">

<div class="form-row">
  <label for "animal">select animal: </label>
  <select id="animal_id" name="animal_id">
    <% @animals.each do |animal| %>

      <% if animal.get_adoption_status == "ready for adoption" %>

        <option value="<%= animal.id %>" 
        <%if @animal%>
        <%= "selected" if @animal.id == animal.id%> 
        <%end%> >
        <%= animal.name%> the <%= animal.breed%> </option>

      <%end%>

    <%end%>
  </select>
</div>


<div class="form-row">
  <label for "owner">select owner: </label>
  <select id="owner_id" name="owner_id">
    <% @owners.each do |owner| %>
      <option value = "<%= owner.id%>" 
      <% if @owner%><%= "selected" if @owner.id == owner.id %>
      <%end%> >
      <%= owner.first_name%> <%= owner.last_name%></option>
    <%end%>
  </select>
</div>

<input type="submit" value="submit" />


</form>